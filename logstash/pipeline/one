input {
  beats {
    port => 5044
  }
  http {
    host => "0.0.0.0"
    port => 5000
  }
}
filter {
        split {
            field => "records"
        }        
}

output {
  elasticsearch {
    hosts => "elasticsearch:9200"
    user => "elastic"
    password => "changeme"
    manage_template => false
    index => "logstash-%{+YYYY.MM.dd}"
  }
}
